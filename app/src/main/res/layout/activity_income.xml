<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Income">


    <TextView
        android:id="@+id/income"
        android:layout_width="360dp"
        android:layout_height="128dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Income"
        android:textAlignment="center"
        android:textSize="44sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <!--    <TextView-->
    <!--        android:id="@+id/dateText"-->
    <!--        android:layout_width="256dp"-->
    <!--        android:layout_height="96dp"-->
    <!--        android:ems="10"-->
    <!--        android:fontFamily="@font/comfortaa_bold"-->
    <!--        android:textAlignment="center"-->
    <!--        android:text="Date:"-->
    <!--        android:textSize="22sp"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/income"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintHorizontal_bias="0.496"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintVertical_bias="0.0" />-->

    <EditText
        android:id="@+id/income_w"
        android:layout_width="256dp"
        android:layout_height="96dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa_bold"
        android:hint="Amount:"
        android:inputType="number"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/income_date1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/but_in"
        android:layout_width="256dp"
        android:layout_height="96dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Add Income"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/income_w"
        app:layout_constraintVertical_bias="0.720" />

    <ScrollView
        android:id="@+id/income_scrollView"
        android:layout_width="256dp"
        android:layout_height="144dp"
        app:layout_constraintBottom_toTopOf="@+id/but_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/income_w"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/income_date1"
        android:layout_width="256dp"
        android:layout_height="96dp"
        android:background="@drawable/roundedbutton"
        android:ems="10"
        android:fontFamily="@font/comfortaa_bold"
        android:text="Pick Date"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/income"
        app:layout_constraintVertical_bias="0.094" />

</androidx.constraintlayout.widget.ConstraintLayout>